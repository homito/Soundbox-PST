FROM bh.cr/balenalabs/bluetooth-%%BALENA_ARCH%%

WORKDIR /usr/src

COPY logs.sh /usr/src/
RUN chmod a+x /usr/src/logs.sh

COPY restartpair.sh /usr/src/
RUN chmod a+x /usr/src/restartpair.sh 

COPY bl-start /usr/src
RUN chmod a+x /usr/src/bl-start

COPY init.py /usr/src/
RUN chmod a+x /usr/src/init.py

COPY start.sh /usr/src/

CMD [ "/bin/bash", "/usr/src/start.sh" ]